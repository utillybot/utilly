{
    "name": "utilly",
    "version": "1.0.0",
    "description": "A discord bot",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "main": "dist/bot.js",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.0.0",
        "@typescript-eslint/parser": "^4.0.1",
        "eslint": "^7.7.0",
        "eslint-config-prettier": "^6.11.0",
        "husky": "^4.2.5",
        "lerna": "^3.22.1",
        "lint-staged": "^10.2.13",
        "prettier": "2.1.1",
        "typescript": "^4.0.2"
    },
    "scripts": {
        "build": "lerna run build",
        "start": "yarn build && yarn run run",
        "heavystart": "yarn eslint:fix && yarn prettier:write && yarn start ",
        "run": "node packages/core/dist/Utilly.js",
        "lint": "yarn eslint:fix && yarn prettier:write",
        "lint:check": "yarn eslint:check && yarn prettier:check",
        "eslint:check": "npx eslint packages/**/*.ts",
        "eslint:fix": "npx eslint packages/**/*.ts --fix",
        "prettier:check": "npx prettier packages/**/*.ts --check",
        "prettier:write": "npx prettier packages/**/*.ts --write"
    },
    "author": "jtsshieh",
    "husky": {
        "hooks": {
            "pre-commit": "npx lint-staged"
        }
    },
    "engines": {
        "node": "14.8.0"
    },
    "lint-staged": {
        "*.ts": [
            "npm run eslint:fix",
            "npm run prettier:write"
        ]
    }
}
