{
    "compilerOptions": {
        "jsx": "react-jsx",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "module": "ESNext",
        "noEmit": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "es2020",
        "strict": true,

        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,

        "moduleResolution": "node",

        "skipLibCheck": true,

        "plugins": [{ "name": "typescript-plugin-css-modules" }]

    },
    "include": ["src"]
}
